<h1><%= @course.name %> Enrollments</h1>
<%= link_to 'Add Enrollment', new_course_enrollment_path(@course) %> 
<br />
<h2>Teacher</h2>
<ul>
  <% @teachers.each do |t| %>
    <li>
      <%= t.user.full_name %>
      <br />
      <%= link_to 'Remove', course_enrollment_path(@course, t), method: :delete %>
    </li>
  <% end %>
</ul>
<h2>TAs</h2>
<ul>
  <% @tas.each do |ta| %>
    <li>
      <%= ta.user.full_name %>
      <br />
      <%= link_to 'Remove', course_enrollment_path(@course, ta), method: :delete %>
    </li>
  <% end %>
</ul>
<h2>Students</h2>
<ul>
  <% @students.each do |s| %>
    <li>
      <%= s.user.full_name %>
      <br />
      <%= link_to 'Remove', course_enrollment_path(@course, s), method: :delete %>
    </li>
  <% end %>
</ul>